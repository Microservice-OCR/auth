{
    "version": 2,
    "builds": [
        {
            "src": "/api/**/*.go",
            "use": "@vercel/go"
        }
    ],
    "routes": [
        {
            "src": "/api/login",
            "methods": ["POST"],
            "dest": "/api/login.go"
        },
        {
            "src": "/api/signup",
            "methods": ["POST"],
            "dest": "/api/signup.go"
        },
        {
            "src": "/api/token",
            "methods": ["POST"],
            "dest": "/api/token.go"
        }
    ]
}
